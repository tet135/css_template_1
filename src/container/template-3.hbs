<main class="blog">
	{{#each blog}}
	<div class="card">
		<div class="card_image" style="background-image: url({{img}})"></div>
		<h2 class="card_title">{{title}}</h2>
		<p class="card_text">{{text}}</p>
		<a href="{{href}}" class="button card_button">{{button}}</a>
	</div>
	{{/each}}
</main>

{{#with form}}
<div class="form">
	<div class="form_content">
		<h3 class="form_title">
			{{title}}
		</h3>
		<p class="form_info">{{info}}<span class="ex">x</span></p>
	</div>
	<div class="form_action">
		<a href="{{href}}" class="button form_button">{{button}}</a>
	</div>
</div>
{{/with}}

<footer class="footer" id="test">
	<div>
		{{>logo }}
		<span class="header_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>

